{
  "version": "1.0.0",
  "name": "blog-central-service",
  "description": "This service is responsible for managing the blog posts and comments",
  "author": "ratchapoltt",
  "repository": {
    "type": "git",
    "url": "https://github.com/ratchapoltt/blog-central-service.git"
  },
  "private": true,
  "engines": {
    "node": "20.15.0",
    "npm": "10.7.0"
  },
  "scripts": {
    "install:husky": "husky",
    "precommit": "lint-staged",
    "prepush": "npm run test:unit",
    "lint": "eslint ./**/*.{js,json,json5,jsonc,md,ts} --quiet --max-warnings 10",
    "lint:fix": "eslint ./**/*.{js,json,json5,jsonc,md,ts} --fix",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "cross-env NODE_ENV=test jest",
    "test:unit-watch": "cross-env NODE_ENV=test jest --watch",
    "test:unit-coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./e2e/jest-e2e.config.ts",
    "build": "cross-env NODE_ENV=local nest build",
    "build:development": "cross-env NODE_ENV=development nest build",
    "build:sit": "cross-env NODE_ENV=sit nest build",
    "build:uat": "cross-env NODE_ENV=uat nest build",
    "build:production": "cross-env NODE_ENV=production nest build",
    "build:test": "cross-env NODE_ENV=test nest build",
    "start": "cross-env NODE_ENV=local nest start --watch",
    "start:debug": "cross-env NODE_ENV=local nest start --debug --watch",
    "start:development": "cross-env NODE_ENV=development nest start --watch",
    "start:development-debug": "cross-env NODE_ENV=development nest start --debug --watch"
  },
  "dependencies": {
    "@nestjs/common": "10.3.10",
    "@nestjs/core": "10.3.10",
    "@nestjs/cqrs": "10.2.7",
    "@nestjs/platform-express": "10.3.10",
    "express": "4.19.2",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@automock/adapters.nestjs": "2.1.0",
    "@automock/jest": "2.1.0",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@commitlint/types": "19.0.3",
    "@faker-js/faker": "8.4.1",
    "@nestjs/cli": "10.4.2",
    "@nestjs/schematics": "10.1.3",
    "@nestjs/testing": "10.3.10",
    "@types/dotenv-webpack": "7.0.7",
    "@types/eslint": "9.6.0",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "22.1.0",
    "@types/source-map-support": "0.5.10",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.17.0",
    "@typescript-eslint/parser": "7.17.0",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "12.0.2",
    "cross-env": "7.0.3",
    "dotenv": "16.4.5",
    "dotenv-webpack": "8.1.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jsonc": "2.16.0",
    "eslint-plugin-markdownlint": "0.6.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-promise": "7.0.0",
    "eslint-plugin-sonarjs": "1.0.4",
    "eslint-plugin-unicorn": "55.0.0",
    "eslint-plugin-unused-imports": "3.2.0",
    "eslint-webpack-plugin": "4.2.0",
    "husky": "9.1.4",
    "jest": "29.7.0",
    "jsonc-eslint-parser": "2.4.0",
    "lint-staged": "15.2.8",
    "node-mocks-http": "1.15.1",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "terser-webpack-plugin": "5.3.10",
    "ts-jest": "29.2.4",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3",
    "webpack": "5.93.0"
  }
}
